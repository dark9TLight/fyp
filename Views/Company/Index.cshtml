@model IEnumerable<AppointmentScheduling.Models.Company>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Companies List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Company" asp-action="Create" class="btn btn-primary">Create new Company</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
            {
        <table class="table table-bordered table-striped" style="width:100%">
            <thread>
                <tr>
                    <th>
                        Company Name
                    </th>
                    <th>
                        Address
                    </th>
                    <th>
                        Phone
                    </th>
                </tr>
            </thread>
            <tbody>
                @foreach(var company in Model)
                {
                <tr>
                    <td width="30%">@company.CompanyName</td>
                    <td width="30%">@company.Address</td>
                    <td width="30%">@company.Phone</td>
                </tr>
                }
            </tbody>
        </table>
    }
            else
            {
                <p>No company created yet</p>
            }
</div>

