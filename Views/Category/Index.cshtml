@model IEnumerable<AppointmentScheduling.Models.Category>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Medicines Category List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create new Medicine Category</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
            {
        <table class="table table-bordered table-striped" style="width:100%">
            <thread>
                <tr>
                    <th>
                        Medicine
                    </th>
                    
                    <th>
                        Changes
                    </th>
                </tr>
            </thread>
            <tbody>
                @foreach(var obj in Model)
                {
                <tr>
                    <td width="35%">@obj.Name</td>
                    <td width="30%">
                        <div class="w-100 btn-group"role="group">
                            <a asp-controller="Category" asp-action="Update" asp-route-Id="@obj.Id" class="btn btn-primary mx-1">Update</a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-1">Delete</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
            else
            {
                <p>No category created yet</p>
            }
</div>

